<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="212dp"
        app:layout_constraintBottom_toTopOf="@+id/lblsms"
        app:layout_constraintEnd_toEndOf="@+id/animationLogin"
        app:layout_constraintStart_toStartOf="@+id/animationLogin"
        app:layout_constraintTop_toTopOf="@+id/animationLogin"
        tools:srcCompat="@drawable/fondo" />

    <LinearLayout
        android:id="@+id/layuotTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageBanco"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/banco" />

        <TextView
            android:id="@+id/lblNombreBanco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BANCO PICHINCHA"
            android:textColor="#232C51"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Versión 12.0"
        android:textColor="#9E9E9E"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/layuotTitulo"
        app:layout_constraintStart_toStartOf="@+id/layuotTitulo"
        app:layout_constraintTop_toBottomOf="@+id/layuotTitulo" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationLogin"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblVersion"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/logo"
        tools:ignore="MissingConstraints"/>



    <TextView
        android:id="@+id/lblsms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciuda tus contraseñas, no las compartas con nadie."
        android:textColor="#232C51"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/animationLogin"
        app:layout_constraintStart_toStartOf="@+id/animationLogin"
        app:layout_constraintTop_toBottomOf="@+id/animationLogin" />

    <LinearLayout
        android:id="@+id/linearLayoutLoginButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblsms">

        <androidx.cardview.widget.CardView
            android:id="@+id/crdUser"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginEnd="10dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="#BF000000"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgUser"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/usuario" />

                <TextView
                    android:id="@+id/lblUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Usuario y contraseña"
                    android:textAlignment="center"
                    android:textColor="#232C51"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crdFingerprint"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginEnd="10dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="#BF000000"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgFingerprint"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/huella" />

                <TextView
                    android:id="@+id/lblHuella"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Huella /\nFace ID"
                    android:textAlignment="center"
                    android:textColor="#232C51"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crdDots"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="#BF000000"
            app:cardCornerRadius="15dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDots"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/puntos" />

                <TextView
                    android:id="@+id/lblDots"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pin de 6\ndígitos"
                    android:textAlignment="center"
                    android:textColor="#232C51"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutLoginButtons">

        <androidx.cardview.widget.CardView
            android:id="@+id/crdLocation"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:outlineAmbientShadowColor="#00FFFFFF"
            android:outlineSpotShadowColor="#00FFFFFF"
            app:cardBackgroundColor="#00FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ubicacion" />

                <TextView
                    android:id="@+id/lblLocalizacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ubicanos"
                    android:textAlignment="center"
                    android:textColor="#3687C9"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/crdKey"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="#00FFFFFF"
            app:cardBackgroundColor="#00FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageLlave"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/llave" />

                <TextView
                    android:id="@+id/lblLlave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Clave\ndigital"
                    android:textAlignment="center"
                    android:textColor="#3687C9"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardCell"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="#00FFFFFF"
            app:cardBackgroundColor="#00FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageCell"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/cell" />

                <TextView
                    android:id="@+id/lblCell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Llámanos"
                    android:textAlignment="center"
                    android:textColor="#3687C9"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:id="@+id/lblusuarioOtro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="¿Ingresar con otro usuario?"
        android:textColor="#3687C9"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/LayoutOptions"
        app:layout_constraintStart_toStartOf="@+id/LayoutOptions"
        app:layout_constraintTop_toBottomOf="@+id/LayoutOptions" />


</androidx.constraintlayout.widget.ConstraintLayout>